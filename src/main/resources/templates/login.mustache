<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ExpenseShare</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6; /* Light gray background */
        }
        .container {
            max-width: 400px;
            margin: 80px auto;
            padding: 2.5rem; /* 40px */
            background-color: #ffffff; /* White background for the form */
            border-radius: 0.75rem; /* 12px rounded corners */
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .form-input {
            width: 100%;
            padding: 0.75rem 1rem; /* 12px padding */
            border: 1px solid #d1d5db; /* Light gray border */
            border-radius: 0.5rem; /* 8px rounded corners */
            margin-bottom: 1rem; /* 16px margin-bottom */
            outline: none;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .form-input:focus {
            border-color: #3b82f6; /* Blue 500 on focus */
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5); /* Blue 500 ring on focus */
        }
        .btn-primary {
            width: 100%;
            padding: 0.75rem 1rem;
            background-color: #2563eb; /* Blue 600 */
            color: #ffffff;
            font-weight: 600; /* Semibold */
            border-radius: 0.5rem;
            transition: background-color 0.2s ease-in-out, transform 0.1s ease-in-out;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: #1d4ed8; /* Blue 700 on hover */
            transform: translateY(-1px);
        }
        .btn-primary:active {
            transform: translateY(0);
        }
        .alert {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            font-size: 0.875rem; /* text-sm */
        }
        .alert-danger {
            background-color: #fee2e2; /* Red 100 */
            color: #ef4444; /* Red 500 */
            border: 1px solid #fca5a5; /* Red 300 */
        }
        .alert-info {
            background-color: #e0f2fe; /* Blue 100 */
            color: #2563eb; /* Blue 600 */
            border: 1px solid #93c5fd; /* Blue 300 */
        }
    </style>
</head>
<body>
<div class="container">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Login to ExpenseShare</h2>

    <!-- Error Message -->
    <div id="error-message" class="alert alert-danger" style="display:none;">
        Invalid username or password.
    </div>

    <!-- Logout Message -->
    <div id="logout-message" class="alert alert-info" style="display:none;">
        You have been logged out.
    </div>

    <form method="post" action="/login">
        <!-- ADD CSRF TOKEN HERE -->
        <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}" />
        <!-- END OF ADDITION -->
        <div class="mb-4">
            <label for="username" class="block text-gray-700 text-sm font-semibold mb-2">Username</label>
            <input type="text" id="username" name="username" class="form-input" placeholder="Enter your username" required autofocus>
        </div>
        <div class="mb-6">
            <label for="password" class="block text-gray-700 text-sm font-semibold mb-2">Password</label>
            <input type="password" id="password" name="password" class="form-input" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="btn-primary">Login</button>
    </form>
</div>

<script>
    // JavaScript to check URL parameters for messages
    document.addEventListener('DOMContentLoaded', function() {
        const params = new URLSearchParams(window.location.search);
        const errorMessage = document.getElementById('error-message');
        const logoutMessage = document.getElementById('logout-message');

        if (params.has('error')) {
            errorMessage.style.display = 'block';
        } else {
            errorMessage.style.display = 'none';
        }

        if (params.has('logout')) {
            logoutMessage.style.display = 'block';
        } else {
            logoutMessage.style.display = 'none';
        }
    });
</script>
</body>
</html>
